<h1><%= "#{@sponsered_post.title}  ($#{@sponsered_post.price} sponsored)" %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @sponsered_post.body %></p>

     <% @sponsered_post.comments.each do |comm| %>
      <div class="media">
        <%= comm.body %>
        <div class="media-body">
          <small> submitted <%= time_ago_in_words(comm.created_at) %>
          </small>
        </div>
      </div>
     <% end %>
   </div>
   <div class="col-md-4">
 <%= link_to "Edit", edit_topic_post_path(@sponsered_post.topic, @sponsered_post), class: 'btn btn-success' %>
 <%= link_to "Delete Post", [@sponsered_post.topic, @sponsered_post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>


   </div>
